language = "python3"
run = "python main.py"
entrypoint = "main.py"

[deploy]
run = ["sh", "-c", "python main.py"]

[env]
PYTHONPATH = "${PYTHONPATH}:."

[interpreter]
command = ["python3", "-u", "${PYTHONPATH}/main.py"]

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[languages.python3.languageServer.args]
- "--config-dir"
- "${PYTHONPATH}/.config"

