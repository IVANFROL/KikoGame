language = "python3"
run = "python main.py"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[interpreter]
command = [
  "python3",
  "-u",
  "$REPL_SOURCE_FILE"
]

# Pygame GUI applications don't need web hosting
# Use Preview tab instead of Publishing
[deploy]
run = ["sh", "-c", "echo 'This is a GUI application. Use Preview tab instead of Publishing.'"]
